<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_stroke_black"
    android:padding="10dp">

    <ImageView
        android:id="@+id/failImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:src="@drawable/x_mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/black" />

    <TextView
        android:id="@+id/failedTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp failed"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/failImg"
        app:layout_constraintEnd_toEndOf="@id/failImg"
        app:layout_constraintTop_toBottomOf="@id/failImg"
        android:textColor="@color/solid_black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/instructionsLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/solid_black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/failedTempText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Line 1"
        android:textSize="@dimen/failedTextSize"/>

    <TextView
        android:id="@+id/instructionsLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/solid_black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/instructionsLine1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Line 2"
        android:textSize="@dimen/failedTextSize"/>

    <TextView
        android:id="@+id/instructionsLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/solid_black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/instructionsLine2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Line 3"
        android:textSize="@dimen/failedTextSize"/>

    <TextView
        android:id="@+id/instructionsLine4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/solid_black"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/instructionsLine3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Line 4"
        android:textSize="@dimen/failedTextSize"/>

</androidx.constraintlayout.widget.ConstraintLayout>